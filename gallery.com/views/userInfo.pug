    body

        div(class ="logout")
            form(action="/logout", method="POST")
                input(type="submit", value="Logout")
        a(href="/homepage") Home Page <br>
        h1 @#{username} 

        p username: #{username}
        p password: #{password}

        br
        br
        h3 Account Type: Patron
        div 
            h2 Upgrade Account
            //create form for upgrade account
            form(id="upgradeAccount")
                label(for="accountType") Account Type
                select(name="accountType" id="accountType")
                    option(value="patron") Patron
                    option(value="artist") Artist
                br
                br
                button(onclick="upgradeAccount()", type="reset",class ="btn btn-success") Upgrade Account
        
        br
        br
        h3 Followed Artists:
            for artists in followedArtist 
                div(class="artist")
                    a(href="/artists/" + artists._id) #{artists.artist} (Click to View)
        br
