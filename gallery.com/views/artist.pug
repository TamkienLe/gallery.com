doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="/client.js")
        link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(href="/styles.css", rel="stylesheet")
        title userInfo
    body 
        div(class ="logout")
            form(action="/logout", method="POST")
                input(type="submit", value="Logout")
        a(href="/homepage") Home Page <br>

        h1 @#{username} 
        p username: #{username}
        p password: #{password}

        h3 Account Type: Artist
        div 
            h2 Change Account
            form(id="upgradeAccount")
                label(for="accountType") Account Type
                select(name="accountType" id="accountType")
                    option(value="artist") Artist
                    option(value="patron") Patron
                br
                br
                button(onclick="upgradeAccount()", type="reset", class = "btn btn-success") Change account

        div(class="nav")
            h1
                a(href="/addArtist") Add Art
        br
        br
        h3 Followed Artists:
            for artists in followedArtist 
                div(class="artist")
                    a(href="/artists/" + artists._id) #{artists.artist} (Click to View)

        br
        br
        h3 Reviews Left: 
            for review in reviews
                div(class="review")
                    a(href="/artists/" + artists ._id) #{reviews} (Click to View)


    


            
