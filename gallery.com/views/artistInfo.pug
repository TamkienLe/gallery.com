doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="/client.js")
        link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(href="/styles.css", rel="stylesheet")
        title Artist Info
    body 

        div(class ="logout")
            form(action="/logout", method="POST")
                input(type="submit", value="Logout")
    //display artist info
    h1 #{artist.artist} 
  
    

        div(class = 'followButton')
            form(action="/followArtist/" + artist._id, method="POST")
                input(type="submit", value="Follow", class ="btn btn-primary")
                script.
                    document.querySelector('input[value="Follow"').addEventListener('click', function() {
                        alert('You are now following this artist!');
                    });

            form(action="/unfollowArtist/" + artist._id, method="POST")
                input(type="submit", value="Unfollow", class ="btn btn-danger")
                script.
                    document.querySelector('input[value="Unfollow"').addEventListener('click', function() {
                        alert('You are no longer following this artist!');
                    });
    

            
    br
    br
        
    

    h2 #{artist.name}

  
    img(src=artist.image, class= "img-thumbnail")
    div(class="artistInfo")
        p Description: #{artist.description} 
        p Year published: #{artist.year}
        p Category: #{artist.category}
        p Medium: #{artist.medium}


    table(class="table")
        thead
            tr
                th 
                    form(action="/review/" + artist._id, method="POST")
                        input(type="text", name="review", placeholder="Write a review")
                        input(type="submit", value="Submit", class ="btn btn-primary")
                        script.
                            document.querySelector('input[value="Submit"').addEventListener('click', function() {
                                alert('Your review has been submitted!');
                            });
                    form(action="/like/" + artist._id, method="POST")
                        input(type="submit", value="Leave a Like", class ="btn btn-success")
                        script.
                            document.querySelector('input[value="Like"').addEventListener('click', function() {
                                alert('You liked this artist!');
                            });
    div(class="reviews")
        h2 Reviews: 
            br
            if artist.reviews.length > 0
                each review in reviews 
                    p(style = "font-size: 15px") #{review}
            else
                p No reviews yet

            
        

                    
    
                    
                            

        








